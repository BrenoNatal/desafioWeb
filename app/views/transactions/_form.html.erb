<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
      <%= form.label "Valor", style: "display: block" %>
      <%= form.text_field :amount, class:"form-control" %>
    </div>

  <div>
    <%= form.label "Descrição", style: "display: block" %>
    <%= form.textarea :description, class:"form-control" %>
  </div>

  <div>
    <%= form.label "Numero da Conta", style: "display: block" %>
    <%= form.number_field :account_num_target, class:"form-control" %>
  </div>

  
  <%= form.number_field :account_num_source, id: :source_name, class:"form-control", value: current_account.account_num, type: :hidden  %>
  <%= form.number_field :account_id_source, id: :account_id_source, class:"form-control", value: current_account.id, type: :hidden  %>

  <div>
      <%= form.submit "Realizar Transferência", class:"btn btn-primary mt-3" %>
    </div>
<% end %>
