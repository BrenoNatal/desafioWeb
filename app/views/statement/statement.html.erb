<div class="d-flex flex-wrap flex-row gap-3">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Saldo</h5>
            <p class="card-text">R$ <%= number_with_precision(current_account.balance, :precision => 2)%></p>
        </div>
    </div>
<div>

<div class="d-flex flex-wrap flex-row gap-3">

   <% @all_movements.each do |movement| %>
        <% case movement %>
        <% when Deposit %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Deposito de:</h5>
                    <p class="card-text">R$ <%= movement.amount%></p>
                    <p class="card-text">Feito em <%= movement.created_at.in_time_zone('Brasilia').strftime("%d-%m-%Y %H:%M:%S") %></p>
                </div>
            </div>
        <% when Withdrawal %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Saque de:</h5>
                    <p class="card-text">R$ <%= movement.amount%></p>
                    <p class="card-text">Feito em <%= movement.created_at.in_time_zone('Brasilia').strftime("%d-%m-%Y %H:%M:%S") %></p>
                </div>
            </div>
        <% when Transaction %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Transição de:</h5>
                    <p class="card-text">R$ <%= movement.amount%></p>
                    <p class="card-text">Feito em <%= movement.created_at.in_time_zone('Brasilia').strftime("%d-%m-%Y %H:%M:%S") %></p>
                    <p class="card-text">De: <%= movement.account_num_source %> Para: <%= movement.account_num_target %></p>
                </div>
            </div>
       <% else %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Transição desconhecida:</h5>
                </div>
            </div>
        <% end %>
    <% end %>
<div>